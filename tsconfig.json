{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "noLib": false,
        "lib": ["es6", "dom"]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
